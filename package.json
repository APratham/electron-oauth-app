{
  "name": "electron-oauth-app",
  "version": "1.0.0",
  "description": "Electron Desktop App with Google OAuth",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development nodemon --watch . --exec \"electron .\"",
    "clean": "rimraf dist node_modules package-lock.json",
    "trace-warnings": "electron . --enable-logging",
    "dist": "cross-env NODE_ENV=production electron-builder --mac --win --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/APratham/electron-oauth-app.git"
  },
  "keywords": [
    "Electron",
    "OAuth",
    "Google",
    "Desktop"
  ],
  "author": {
    "name": "APratham",
    "email": "a.pratham1998@gmail.com",
    "url": "https://apratham.github.io/"
  },
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/APratham/electron-oauth-app/issues"
  },
  "homepage": "https://github.com/APratham/electron-oauth-app?tab=readme-ov-file",
  "dependencies": {
    "@azure/msal-angular": "^3.0.20",
    "@azure/msal-browser": "^3.17.0",
    "@azure/msal-node": "^2.9.2",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^10.0.0",
    "google-auth-library": "^9.11.0",
    "keytar": "^7.9.0",
    "nodemon": "^3.1.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "30.1.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.yourcompany.electronoauthapp",
    "productName": "Electron OAuth App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist_electron/**/*",
      "!*.log",
      "!*.md",
      "!*.plist",
      "!.gitignore",
      "!package-lock.json"
    ],
    "extraResources": {
      "from": "./node_modules/",
      "to": "node_modules",
      "filter": [
        "**/*"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/mac/aiops.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icons/win/aiops.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "APratham <a.pratham1998@gmail.com>",
      "icon": "assets/icons/linux/aiops.png"
    }
  }
}
